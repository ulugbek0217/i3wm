
general {
    interval = 1
    colors = true
    color_good="#FFFFFF"
    color_degraded="#ffd75f"
    color_bad="#d75f5f"
}

order += "volume master"
#order += "battery 0"
order += "disk /"
order += "disk /home"
order += "cpu_usage"
order += "memory"
order += "load"
order += "tztime local"

tztime local {
        format = " %Y-%m-%d %H:%M:%S "
}

disk "/home" {
     format = "HOME %avail "
}

disk "/" {
     format = "ROOT %avail "
}

cpu_usage {
    format = "CPU %usage "
}

memory {
    format = "Mem %used / %total "
}

load {
    format = "Load %5min 5min "
}

volume master {
    format = "ðŸ”Š %volume "
    format_muted = "ðŸ”‡ %volume "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    format = "%status %percentage "
    format_down = " DOWN "
    status_chr = " CHARGING "
    status_bat = " BATTERY "
    status_unk = " UNKNOWN "
    #last_full_capacity = true
    status_full = " FULL "
    path = "/sys/class/power_supply/BAT%d/uevent"
}